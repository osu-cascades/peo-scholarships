%h1 Administration

.float-right
  = link_to 'New Scholarship', new_admin_scholarship_path, class: 'btn btn-outline-primary'

%h2 Scholarships

%table.table.table-hover
  %thead
    %tr
      %th{scope: 'col'} id
      %th{scope: 'col'} Name
      %th{scope: 'col'} Number of Applications
      %th
  %tbody
    - @scholarships.each do |scholarship|
      %tr[scholarship]
        %th{scope: 'row'}= scholarship.id
        %td
          = link_to scholarship, admin_scholarship_path(scholarship)
          .small
            = link_to pluralize(scholarship.questions.count, 'question'), admin_scholarship_questions_path(scholarship)
        %td= link_to pluralize(scholarship.applications.count, 'application'), admin_scholarship_applications_path(scholarship)
        %td
          = link_to 'Edit', edit_admin_scholarship_path(scholarship), class: 'btn btn-light btn-sm mr-4'
          = link_to 'Delete', admin_scholarship_path(scholarship), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn text-danger btn-sm'
