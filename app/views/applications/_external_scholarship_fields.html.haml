%fieldset
  .row
    .col-4.form-group
      = f.label :name, 'Scholarship/Grant Name'
      = f.text_field :name, class: 'form-control'
    .col-6.form-group
      = f.label :amount, 'Amount per Month'
      = f.text_field :amount, class: 'form-control'

  .row
    .col-4.form-group
      = f.hidden_field :_destroy
      = link_to 'remove', '#', class: 'remove_fields'
